<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="esercitazione-unit" transaction-type="RESOURCE_LOCAL">
		<class>calcio.Giocatore</class>
		<class>calcio.Squadra</class>
		<class>azienda.Divisione</class>
		<class>azienda.Impiegato</class>
		<class>azienda.Progetto</class>
		<class>magazzino.Prodotto</class>
		<class>magazzino.Reparto</class>
		<class>magazzino.Magazziniere</class>
		<class>museo.Artista</class>
		<class>museo.Curatore</class>
		<class>museo.Opera</class>
		<class>museo.Stanza</class>
		<class></class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/esercitazione" />

		<!-- Hibernate properties -->
	        <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>
</persistence>